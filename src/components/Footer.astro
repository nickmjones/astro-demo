---
import logo from "../assets/images/Logo.svg";
import { Image } from "astro:assets";
---
<footer class="w-full bg-slate-950 py-12 md:py-32 overflow-hidden">
  <div class="container m-auto md:max-w-7xl flex flex-col md:flex-row justify-between">

    <div class="flex md:flex-col p-8 md:p-0 mb-4">
      <Image src={ logo } alt="cosmik logo" />
    </div>

    <div class="flex flex-col md:flex-row w-3/5 p-8 md:p-0">
      <div class="flex flex-col w-1/3 mb-4">
        <h3 class="text-md text-slate-300 mb-2">Product</h3>
        <ul class="text-slate-600 text-sm">
          <li class="py-1"><a href="#">Features</a></li>
          <li class="py-1"><a href="#">Pricing</a></li>
          <li class="py-1"><a href="#">Security</a></li>
        </ul>
      </div>

      <div class="flex flex-col w-1/3 mb-4">
        <h3 class="text-md text-slate-300 mb-2">Company</h3>
        <ul class="text-slate-600 text-sm">
          <li class="py-1"><a href="#">About Us</a></li>
          <li class="py-1"><a href="#">Careers</a></li>
          <li class="py-1"><a href="#">Contact</a></li>
        </ul>
      </div>

      <div class="flex flex-col w-1/3 mb-4">
        <h3 class="text-md text-slate-300 mb-2">Resources</h3>
        <ul class="text-slate-600 text-sm">
          <li class="py-1"><a href="#">Blog</a></li>
          <li class="py-1"><a href="#">Documentation</a></li>
          <li class="py-1"><a href="#">Support</a></li>
        </ul>
      </div>
    </div>
  </div>
</footer>